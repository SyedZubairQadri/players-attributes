<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.justjava2.ScrollingActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eden_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDEN HAZARD"
            android:background="#64B5F6"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chelsea"
            android:src="@drawable/chelsea"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/edenskills_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/edendribbling_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DRIBBLING"
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/edenpace_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PACE"
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/edenshooting_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHOOTING"
            android:background="#64B5F6"
            android:textStyle="italic"/>










        />





</LinearLayout>




</android.support.v4.widget.NestedScrollView>
