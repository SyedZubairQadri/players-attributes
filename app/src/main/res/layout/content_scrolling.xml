<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.justjava2.ScrollingActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eden_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDEN HAZARD"
            android:background="#64B5F6"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chelsea"
            android:src="@drawable/chelsea"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hazard"
            android:src="@drawable/hazard"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/edenskills_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/edendribbling_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DRIBBLING"
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/edenpace_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PACE"
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/edenshooting_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHOOTING"
            android:background="#64B5F6"
            android:textStyle="italic"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL ATTRIBUTES"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="submitOrder"/>




        <TextView
            android:id="@+id/messi_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEO MESSI"
            android:background="#64B5F6"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/barca"
            android:src="@drawable/barca"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messi"
            android:src="@drawable/messi"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/messiskills_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/messidribbling_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/messipace_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#64B5F6"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/messishooting_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#64B5F6"
            android:textStyle="italic"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL ATTRIBUTES"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="submitOrderm"/>










</LinearLayout>




</android.support.v4.widget.NestedScrollView>
